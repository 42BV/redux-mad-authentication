  "peerDependencies": {
    "react-router-dom": "4.0.0",
    "redux": "3.6.0"
  },
  "devDependencies": {
    "@types/fetch-mock": "7.2.3",
    "@types/jest": "24.0.9",
    "@types/react": "16.8.6",
    "@types/react-dom": "16.8.2",
    "@types/react-router-dom": "4.3.1",
    "@typescript-eslint/eslint-plugin": "1.4.2",
    "@typescript-eslint/parser": "1.4.2",
    "eslint": "5.15.1",
    "eslint-config-prettier": "4.1.0",
